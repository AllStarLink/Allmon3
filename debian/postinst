#!/bin/sh -e
# postinst script for allmon3
#
# see: dh_installdeb(1)

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
	. /usr/share/apache2/apache2-maintscript-helper
fi

do_configure() {
	## User Management
	if ! getent passwd allmon3 >/dev/null 2>&1; then
		adduser --system --no-create-home --home /nonexistent --group \
		--shell /usr/sbin/nologin --disabled-login --disabled-password allmon3
	fi

	## Ensure Perms on Sensitive Files
	chown allmon3:allmon3 /etc/allmon3/allmon3.ini /etc/allmon3/user*
	chmod 660 /etc/allmon3/allmon3.ini /etc/allmon3/user*

	## Apache Management
	if [ -e /usr/sbin/apache2 ]; then
		apache2_invoke enmod proxy_http || exit $?
		apache2_invoke enmod proxy_wstunnel || exit $?
		apache2_invoke enmod rewrite || exit $?
		apache2_invoke enconf allmon3 || exit $?
	fi
}

case "$1" in
    configure)
	do_configure
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

